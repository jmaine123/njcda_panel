<%= form_for([@course, @cohort, @instructor]) do |f|%>

  <%= f.text_field :first_name, placeholder: 'Enter First Name',class:'input' %><br>
  <%= f.text_field :last_name, placeholder: 'Enter Last Name', class:'input' %><br>
  <%= f.email_field :email, placeholder: 'Enter email', class: 'input'%><br>
  <%= f.number_field :salary, placeholder: 'Enter salary'%><br>
  <%= f.number_field :age, placeholder: 'Enter age' %><br><br>
  <%= label_tag("Highest completed education:") %><br><br>
  <%= f.radio_button(:education, 'High School')%> High School<br>
  <%= f.radio_button(:education, 'College')%>College<br>
  <%= f.radio_button(:education, 'Masters') %> Masters<br>
  <%= f.radio_button(:education, 'PHD') %>PHD<br><br>

  <%= f.submit 'Register'%>

<% end %>
