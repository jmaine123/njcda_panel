<h1><%=@course.name%></h1>
<p><%= @course.total_hours%> hours per day</p>

<% if logged_in? && current_user.admin === true %>
<%= link_to 'Edit Course Information', edit_course_path%>
<%end%>
<h2>List of Cohorts</h2>
<ul>
  <% @course.cohorts.each do |coh|%>
  <li><%= link_to "#{coh.name}", course_cohort_path(@course.id, coh.id) %></li>
  <%end%>
</ul>

<br><br>
<% if logged_in? && current_user.admin === true %>
<%= link_to "Add a new Cohort", new_course_cohort_path(@course.id)%>
<%end%>
<br><br>
<%= link_to 'Back to Cohort', courses_path%>
