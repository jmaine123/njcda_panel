<h1>All Courses</h1>

<div class = 'course_list'>
  <%color = ['red','blue','yellow']%>
  <% @courses.each do |c|%>
    <div><%=link_to c.name, c%></div>
  <%end%>
</div>
<% if logged_in? && current_user.admin === true %>

<button 'add_course'type="button"><%= link_to 'Add Course', new_course_path%></button>
<br><br>
<%end%>
