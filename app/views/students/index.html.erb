<h1>List of all Students</h1>
<div class="chart_container">
  <table class="chart">
    <tr class ='list_header'>
      <th>First Name</th>
      <th>Last Name</th>
      <% if current_user.admin == true%>
      <th>Email</th>
      <th>Age</th>
      <th>Phone Number</th>
      <%end%>
      <% if current_user.student != true%>
      <th>Cohort</th>
      <%end%>
    </tr>
    <% @students.each do |i|%>
    <tr>
      <td> <%=i.first_name%></td>
      <td><%=i.last_name%></td>
      <% if current_user.admin == true%>
      <td><%=i.email%></td>
      <td><%=i.age%></td>
        <% if i.phone_number != nil %>
        <td>(<%=i.phone_number.first(3)%>) <%=i.phone_number[3..5]%> - <%= i.phone_number[6..i.phone_number.length]%></td>
        <%else%>
        <td> </td>
        <%end%>

      <%end%>
      <% if current_user.student != true%>
      <td><%=i.cohort.name%></td>
      <%end%>
    </tr>
    <%end%>
  </table>

</div>
